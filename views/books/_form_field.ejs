<div class="form-row">
    <div class="form-item">
        <label>Title</label>
        <input type="text" name="title" value="<%= book.title  %>">
    </div>
    <div class="form-item">
        <label>Author</label>
        <select name="author">
            <% authors.forEach(element=> { %>
                <% if (element.id===book.author) { %>
                    <option selected label="<%= element.name %>" value="<%= author.id %>"></option>
                <% } else { %>
                    <option label="<%= element.name %>" value="<%= element.id %>"></option>
                    <% }}) %>
        </select>
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label>Publish Date</label>
        <input type="date" name="date"
            value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>"> 
            <!-- This toISOString() convert the date in db to something like this example "2010-10-12T12:45" , so we split('T') and take the 1st part -->
    </div>
    <div class="form-item">
        <label>Page Count</label>
        <input type="number" name="pageCount" min="1"
            value="<%= book.pageCount %>"> 
    </div>
</div>


<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Book Cover</label>
        <input type="file" name="cover" class="book-cover filepond"> 
    </div>
    <div class="form-item">
        <label>Description</label>
        <textarea name="description"><%= book.description %></textarea>
    </div>
</div>



